#include <iostream>

using namespace std;

int main()
{
    int a,i,j;
cout<<"Nama : Arisandi\n";
cout<<"NIM : 000000000\n";
cout<<"UNIT : TI\n";
cout<<"===========================\n";
cout<<"\n";

cout<<"MASUKAN ANGKA = ";
cin>>a;

for(i=1;i<=a;i++)
{
for(j=1;j<=a-i;j++)
cout<<" ";
for(j=1;j<=i;j++)
cout<<"* ";
cout<<endl;
}
a=a-1;
for(i=1;i<=a;i++)
{
for(j=1;j<i;j++)
cout<<" ";
for(j=1;j<=a-i+1;j++)
cout<<" *";
cout<<endl;

}
}
