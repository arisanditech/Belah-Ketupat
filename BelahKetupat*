#include<iostream>
using namespace std;
int main()
{
int a,i,j;


cout<<“MASUKAN ANGKA = “;
cin>>a;

for(i=1;i<=a;i++)
{
for(j=1;j<=a-i;j++)
cout<<” “;
for(j=1;j<=i;j++)
cout<<“* “;
cout<<endl;
}
a=a-1;
for(i=1;i<=a;i++)
{
for(j=1;j<i;j++)
cout<<” “;
for(j=1;j<=a-i+1;j++)
cout<<” *”;
cout<<endl;

}
}
